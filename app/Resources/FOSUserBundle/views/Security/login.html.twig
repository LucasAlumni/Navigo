{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
	<main class="page-content">
            <div class="page-inner">
                <div id="main-wrapper">
                    <div class="row">
                        <div class="col-md-3 center">
                            <div class="login-box" >
                                <a href="index.html" class="logo-name text-lg text-center">Navigo</a>
                                <p class="text-center m-t-md">Merci de vous connecter à votre compte.</p>
                                <form class="m-t-md" action="{{ path("fos_user_security_check") }}" method="post">
                                	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    <div class="form-group">
                                        <input type="email" class="form-control" id="username" placeholder="Email" name="_username" required="required"/>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="password" placeholder="Password" name="_password" required="required" />
                                    </div>
                                    <label>
		                                <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
		                            </label>
                                    <input class="btn btn-success btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                                    <a href="{{ path("fos_user_resetting_request") }}" class="display-block text-center m-t-md text-sm">Mot de passe oublié ?</a>
                                    <p class="text-center m-t-xs text-sm">Vous n'avez pas de compte ?</p>
                                    <a href="{{ path("fos_user_registration_register")}}" class="btn btn-default btn-block m-t-md">Créer un compte</a>
                                </form>
                                <p class="text-center m-t-xs text-sm">2015 &copy; Navigo</p>
                            </div>
                        </div>
                    </div><!-- Row -->
                </div><!-- Main Wrapper -->
            </div><!-- Page Inner -->
        </main><!-- Page Content -->  
{% endblock fos_user_content %}
